<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="20dp"
                android:height="0.8dp"></size>
            <!--<solid android:color="@color/color_gray"></solid>-->
            <solid android:color="@android:color/transparent"></solid>
        </shape>

    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="rectangle">
            <gradient android:angle="360"
                android:endColor="#ffff00ff"
                android:startColor="#ffff0000"></gradient>
            <size
                android:width="20dp"
                android:height="0.8dp"></size>
        </shape>
    </item>
</layer-list>